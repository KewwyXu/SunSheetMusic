{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "allowJs": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "rootDir": "src",
    "lib": [
      "es6",
      "dom"
    ],
  },
  "include": [
    "src"
  ],
  "exclude": [
    "./node_modules",
    "dist"
  ]
}